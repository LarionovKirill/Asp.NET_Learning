@{
    ViewData["Title"] = "Home page";
    var name = ViewData["name"];
    var number = ViewData["number"];
    var email = ViewData["email"];
    List<Contact> Contacts = new List<Contact>();
}

<div class="wrapper">
    <div class="search">
        <input class="find" type="search" placeholder="Введите имя">
    </div>
    <div class="list_contact">
        <select size="5">
            @for (int i = 0; i < 5; i++)
            {
                Contacts.Add(ContactsFactory.GenerateContact());
                <option>@Contacts[Contacts.Count-1].Name</option>
            }
        </select>
    </div>
    <div class="buttons_contact">
        <input type="image" src="~/images/Add_User_512x512.png"
               width="30px" height="30px" class="add" id="add"
               onclick="location.href='@Url.Action("Create", "Home")'">
        <input type="image" src="~/images/Edit_User_512x512.png"
               width="30px" height="30px" class="edit" onclick="editContact()">
        <input type="image" src="~/images/Remove_User_512x512.png"
               width="30px" height="30px" class="remove" onclick="removeContact()">
    </div>
    <div class="contact_info">
        <div class="user_photo">
            <img src="~/images/User_Avatar_512x512.png" width="150px" height="150px">
        </div>
        <div class="form_info">
            <label>Имя:</label>
            <input class="name" type="search" value="@name">
            <label>Номер:</label>
            <input class="phone" type="search" value="@number">
            <label>Email:</label>
            <input class="email" type="search" value="@email">
        </div>
    </div>
</div>

<script>
    function removeContact() {
        var select = document.querySelector('select');
        if (select.value.length>0) {
            alert(select.value + ' был удален');
        }
        else { 
            alert('Контакт не был выбран.');
        }
    }
    function editContact() { 
        var select = document.querySelector('select');
        if (select.value.length > 0) {
            console.log('Переход на страницу редактирования');
        }
        else {
            alert('Выберите пользователя для редактирования')
        }
    }
</script>